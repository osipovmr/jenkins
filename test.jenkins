#!groovy

properties([disableConcurrentBuilds()])
pipeline {
    agent {
        docker {
            image 'maven:3.8.4-openjdk-11'
            args '-v $HOME/.m2:/root/.m2'
        }
    }
    options {
        timestamps()
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build JAR') {
            steps {
                sh 'mvn clean package'
            }
        }
    }
}